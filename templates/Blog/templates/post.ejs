<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content="${post.attributes.description}" />
        <title><%=post.attributes.title%> | <%=posts.config.blogName%></title>
        <link rel="stylesheet" href="/index.css" />
        <link rel="stylesheet" href="/assets/prism.css" />
        <%const html = require('html-format')%>
    </head>
    <body>
        <aside>
            <div>
                <h1><%=posts.config.ownerName%></h1>
                <p><%=posts.config.description%></p>
            </div>
            <nav>
                <%-html((posts.config.navLinks || []).map(link => `<a href="${link.href}">${link.text}</a>`).join('\n'))%>
            </nav>
        </aside>
        <main>
            <div class="markdown-section">
                <h1 align="center" class="title"><%=post.attributes.title%></h1>
                <%-post.body%>
            </div>
        </main>
    </body>
</html>